<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NLUShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/colorGray</item>-->
        <item name="colorPrimary">@color/bgToolBar</item>
        <item name="colorPrimaryVariant">@color/bgLogo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="menuitemcolor" parent="Theme.NLUShop">
        <item name="android:textColorPrimary">@color/bgToolBar</item>
        <item name="drawerArrowStyle">@style/changeColorDrawerToggle</item>
    </style>

    <style name="changeColorDrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>

    </style>

    //Custom color for search button
    <style name="buttonSearchColor" parent="Theme.NLUShop">
        <item name="colorPrimary">@color/white</item>
    </style>

    //Custom button FB
    <style name="buttonFacebookColor" parent="Theme.NLUShop">
        <item name="colorPrimary">#334A6EA9</item>
        <item name="strokeColor">@color/colorFacebook</item>
        <item name="strokeWidth">1dp</item>
    </style>

    //Custom button GG
    <style name="buttonGoogleColor" parent="Theme.NLUShop">
        <item name="colorPrimary">#33DA4835</item>
        <item name="strokeColor">@color/colorGoogle</item>
        <item name="strokeWidth">1dp</item>
    </style>

    //Custom button chung
    <style name="buttonMain" parent="Theme.NLUShop">
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerSize">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:solidColor">@color/white</item>
    </style>

    <style name="DoiMauNgoiSaoRatingBar" parent="Theme.NLUShop">
        <item name="colorControlNormal">@color/bgLogo</item>
        <item name="colorControlActivated">@color/bgLogo</item>
    </style>

</resources>